@model IEnumerable<Yapti.Web.Models.OrderDto>

<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Order List</h1>
        </div>
        
        <div class="col text-end pt-2">
            <a asp-action="OrderCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Create New Order</a>
        </div>
    </div>
    
    <table class="table">
        <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.CategoryName
                </th>
                <th>
                    @item.Price.ToString("C")
                </th>
                <th>
                    <a asp-action="OrderEdit" class="btn btn-success" asp-route-orderId="@item.OrderId">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="OrderDelete" class="btn btn-danger" asp-route-orderId="@item.OrderId">
                        <i class="fas fa-trash"></i>
                    </a>

                </th>
                <th></th>
            </tr>
        }
        <tbody/>
    </table>

</div>