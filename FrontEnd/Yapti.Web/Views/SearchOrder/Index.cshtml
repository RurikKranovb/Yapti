@model IEnumerable<OrderDto>

<form>
    <div class="container row">
        @foreach (var order in Model)
        {
            <div class="col-4">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@order.ImageUrl" class="card-img-top" />
                        <div class="card-body">
                            <h3 class="card-body">@order.Name</h3>
                            <span class="badge badge-light mb-2">@order.CategoryName</span>
                            <p class="card-text">@Html.Raw(order.Description)</p>
                            <div class="row">
                                <div class="col pt-1">
                                    <span style="font-size:23px;">@string.Format("{0:c}", order.Price)</span>
                                </div>
                                <div class="col">
                                    <a asp-action="Details" asp-route-orderId="@order.OrderId" class="btn btn-success form-control">Откликнутся</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>